{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "dom"],
    "moduleResolution": "node",
    "rootDir": "./",
    "plugins": [
      {
        "name": "@formatjs/ts-transformer",
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx",
    "src/custom.d.ts"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "node_modules/**", "build"]
}
